<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="390dp"
        android:layout_height="260dp"
        android:id="@+id/imageView"
        android:background="@drawable/splash"/>

    <TextView
        android:text="X1, Y1:"
        android:textSize="20dp"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="X2, Y2:"
        android:textSize="20dp"
        android:layout_width="65dp"
        android:layout_height="25dp"
        android:layout_marginLeft="54dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="65dp"
        android:id="@+id/textView2"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Difference:"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="105dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Quadrant:"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="150dp"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Motion:"
        android:textSize="20dp"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="195dp"
        android:id="@+id/textView5"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText9"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignLeft="@+id/editText8"
        android:layout_alignStart="@+id/editText8"
        android:clickable="false" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText10"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/editText9"
        android:layout_alignStart="@+id/editText9"
        android:clickable="false" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignLeft="@+id/editText10"
        android:layout_alignStart="@+id/editText10"
        android:clickable="false" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText12"
        android:layout_alignBaseline="@+id/textView5"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/editText11"
        android:layout_alignStart="@+id/editText11"
        android:clickable="false"
        android:editable="false" />

    <EditText
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText8"
        android:clickable="false"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />


</RelativeLayout>