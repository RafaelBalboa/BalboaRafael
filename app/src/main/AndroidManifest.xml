<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mlabs.bbm.finalproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.mlabs.bbm.finalproject.SplashScreen"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mlabs.bbm.finalproject.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.mlabs.bbm.firstandroidapp.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name="com.mlabs.bbm.finalproject.Main2Activity"></activity>
        <activity
            android:name="com.mlabs.bbm.finalproject.OntouchAct"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.mlabs.bbm.firstandroidapp.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mlabs.bbm.finalproject.SignUp"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="com.mlabs.bbm.firstandroidapp.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>